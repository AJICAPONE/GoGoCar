section.personal-settings.pt-0
    .container
        .personal-settings--wrap
            .col-xl-3.col-lg-4.col-md-5.personal-sidebar
                include ../../profile/sidebar-profile
            .col-xl-9.col-lg-8.col-md-7.personal-content
                .personal-content--main
                    .personal-content--header
                        h3.personal-content--header--title Персональные данные
                    form.personal-content--body
                        .personal-content--body--content.row
                            .col-xl-4.col-lg-4.personal-mb
                                .all-trip--popup__col.personal-content--select
                                    label Пол:
                                    select.gogocar-select
                                        option(value="Мужской") Мужской
                                        option(value="Женский") Женский
                            .col-xl-4.col-lg-4.personal-mb
                                .all-trip--popup__col
                                    label Имя:
                                    input.gogocar-input--filter.personal-content--input(type="text" placeholder="Введите имя")
                            .col-xl-4.col-lg-4.personal-mb
                                .all-trip--popup__col
                                    label Фамилия:
                                    input.gogocar-input--filter.personal-content--input(type="text" placeholder="Введите фамилию")
                            .col-xl-5.col-lg-5.personal-mb
                                .all-trip--popup__col
                                    label Эл. почта:
                                    input.gogocar-input--filter.personal-content--input(type="email" placeholder="Введите Email" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+[.][a-z]{2,4}$")
                            .col-xl-7.col-lg-7.personal-mb
                                .all-trip--popup__col
                                    label Телефон:
                                    .gogocar-select-country--wrap
                                        .gogocar-select-country.gogocar-input--filter.personal-content--input
                                            .gogocar-select-country--flag--wrap
                                                .gogocar-select-country--flag(style="background-image:url('static/img/general/lang/uz.png')")
                                                .gogocar-select-country--name UZ
                                            +icon('arrow-right')
                                            ul.gogocar-select-country__list
                                                li.gogocar-select-country__item(data-mask-phone="(+900 00) 000-00-00")
                                                    .gogocar-select-country__item--flag(style="background-image:url('static/img/general/lang/uz.png')")
                                                    .gogocar-select-country__item--name UZ
                                                li.gogocar-select-country__item(data-mask-phone="+7 (000) 000-00-00")
                                                    .gogocar-select-country__item--flag(style="background-image:url('static/img/general/lang/ru.png')")
                                                    .gogocar-select-country__item--name RU


                                        input.gogocar-input--filter.personal-content--input.mask-phone-choise(type="tel" placeholder="Введите Телефон" required minlength="18")
                            .col-xl-5.col-lg-5.personal-mb
                                .all-trip--popup__col.mb-4
                                    label Дата рождения:
                                    .notific-input-icon.personal-w
                                        input.gogocar-input--filter.popup-show-calendar.personal-content--input.popup-show-calendar-click.calendar-zone-height(type="text" readonly="readonly")
                                        .notific-calendar-icon
                                            +icon('calendar2')
                                .gogocar-ready-plan--covid.personal-info-about-me
                                    .gogocar-gray-icons
                                        +icon('info')
                                    .gogocar-ready-plan--covid--info
                                        .gogocar-ready-plan--covid--title Расскажите другим пользователям о себе.
                                        .gogocar-ready-plan--covid--desc минимум 10 символов
                            .col-xl-7.col-lg-7.personal-mb
                                .all-trip--popup__col
                                    label Обо мне:
                                    textarea.personal-textarea.personal-content--input(placeholder="Введите информацию о себе" rows="5" cols="10" minlength="10")
                        button.gogocar-yellow-button.mt-4(type="submit") Сохранить
