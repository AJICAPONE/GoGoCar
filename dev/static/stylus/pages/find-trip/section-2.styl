.popular-trip-slider-js

  .slick-list
    padding-top 30px !important

  .gogocar-trip--item
    width 370px
    min-width 370px
    padding 0 15px
    transition all linear .2s
    outline none

  .slick-current
    margin-top -20px

.popular-dots--wrap,.chat-dots--wrap
  display flex
  align-items center
  justify-content center
  width 100%
  height 30px

  ul
    display flex
    align-items center
    justify-content center
  li
    display: flex;
    align-items center
    justify-content center
    background: #424B5B
    border-radius: 10px;
    size(12px)
    margin-right 15px
    cursor pointer
    transition all linear .2s

    &:last-child
      margin-right 0
  li.slick-active
    background-color #FDAB3E;
    box-shadow: 0px 0px 20px rgba(253, 191, 90, 0.2);
    size(16px)
.chat-dots--wrap
  height 20px
  margin-bottom 25px
  li.slick-active
    size(14px)
  li
    size(10px)
    z-index 5
  ul
    margin-bottom 25px
.gogocar-input-hidden-cargo-find
  display flex
  flex-wrap wrap
  align-items center
  background-color: transparent;
  width: 100%;
  padding: 10px 15px;
  padding-left: 70px;
  padding-right 70px
  border: none;
  color: #fff;
  font-family: 'Montserrat 500', sans-serif;
  font-size: 15px;
  height: 100%
  min-height 62px
  border-radius: 15px;
  position relative

.ggc-cargo--item
  display flex
  text-align center
  align-items center
  background-color #FDBF5A
  border-radius 8px
  padding 10px
  height 35px
  margin-right 10px
  margin-bottom 10px

  .icon
    size(12px)
    margin-left 10px
    cursor pointer
