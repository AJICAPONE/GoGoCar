.car-place--content
  display flex

.car-place--svg
  width 100%
  height 100%
  height 460px

  .icon
    size(100%)
.car-place--position
  position relative
.car-place--svg--places
  position: absolute;
  cursor pointer
  opacity 0
  transition all linear .1s

  .icon
    size(100%)

  &:hover
    opacity 1

.car-place--svg--places.active
  opacity 1

.car-right-top-place
  width: 54px;
  height: 76.8px;
  right: 174px;
  top: 195px;

.car-right-bottom-place
  width: 54px;
  height: 76.8px;
  right: 232px;
  top: 284px;


.car-left-bottom-place
  width: 54px;
  height: 76.8px;
  right: 173px;
  top: 284px;
.car-place--info
  display flex
  flex-direction column
  justify-content center
  .section-title
    font-size 28px
    margin-bottom 40px
  .section-desc
    font-size 16px
    margin-bottom 30px
    font-family 'Montserrat 500'
  .gogocar-ready-plan--covid
    justify-content center
    margin-right 0
    margin-bottom 60px