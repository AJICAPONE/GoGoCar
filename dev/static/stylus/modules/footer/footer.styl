footer
  flex 0 0 auto

.footer-wrap
  display flex
  align-items center
  padding 50px 0
.footer-items:first-child
  padding-left 0

.footer-items:last-child
  padding-right 0
.footer-logo
  .icon
    width 186px

.footer-pages-item
  color #fff
  font-family 'Montserrat SB',sans-serif
  font-size 15px
  margin-bottom 15px

  &:last-child
    margin-bottom 0

.footer-pages-list
  display flex
  flex-direction column
.footer-pages--wrap
  display flex
  justify-content space-between


.footer-country-item,.footer-country-item2
  display flex
  justify-content space-between
  align-items center
  .icon
    size(25px)
    margin-right 15px
  .icon-arrow-right3
    size(15px)
    stroke: #fff;
    fill-opacity: 0;
    stroke-width: 2px;
    stroke-linecap: round;
    stroke-linejoin: round;
    transform rotate(90deg)
    margin-left 15px
    margin-right 0
  span
    font-size 14px
    font-family 'Montserrat SB',sans-serif
    color #fff

.footer-country-item__img
    size(25px)
    margin-right: 10px;
    background-repeat: no-repeat;
    background-size: contain;

.footer-country-list,.footer-country-list2
  background: #363D4A;
  border-radius: 10px;
  padding 10px 12px
  width max-content
  position relative

.footer-country-choise--list
  position absolute


.footer-select-list
  display flex
  align-items center
  justify-content space-between

.lang-uz
  background-image url("/static/img/general/lang/uz.png")

.lang-ru
  background-image url("/static/img/general/lang/ru.png")


.footer-copy--wrap
  display flex
  align-items center
  justify-content space-between

.footer-copyright
  display flex
  align-items center
  height 80px
  background-color #363D4A

.footer-copy--info
  color rgba(255, 255, 255, 0.5)
  font-family 'Montserrat 500',sans-serif
  font-size 15px


.footer-copy--social
  display flex
  align-items center

.footer-copy--social__item
  display flex
  align-items center
  justify-content center
  size(40px)
  background: #FDAB3E;
  box-shadow: 0px 0px 20px rgba(253, 191, 90, 0.2);
  border-radius: 12px;
  margin-right 15px

  &:last-child
    margin-right 0

  .icon
    size(20px)

.footer-border
  border-top 2px solid #363D4A
.footer-town-trip--wrap
  border-top 1px solid rgba(255, 255, 255, 0.1)
  margin 0
  margin-bottom 60px
  padding-top 60px
.footer-town-trip--list
  width 100%
.footer-town-trip--item
  display flex
  align-items center
  justify-content space-between

.footer-town-trip-li--item
  display flex
  align-items center
  justify-content space-between
  margin-bottom 40px

  &:last-child
    margin-bottom 0
.footer-town-trip-li--item--icon
  .icon
    size(15px)
.footer-town-trip--item__trip
  color #fff
  font-family 'Oswald 400',sans-serif
  font-size 17px

